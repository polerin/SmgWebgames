{
  "name": "@shieldmaidengames/webgames",
  "version": "0.0.0",
  "description": "Game and server for multipipe",
  "license": "ISC",
  "author": "polerin <polerin@eclexia.net>",
  "type": "module",
  "private": true,
  "exports": {
    "./tsconfig.json": "./tsconfig.json"
  },
  "scripts": {
    "build": "nx run-many -t build --verbose --skipNxCache && yarn artifacts:copy",
    "clean": "yarn artifacts:clean && nx run-many -t clean && nx reset",
    "start": "yarn build && yarn artifacts:copy yarn workspace @shieldmaidengames/webgames-server start",
    "start:dev": "yarn build && yarn artifacts:copy && concurrently 'yarn workspace @shieldmaidengames/webgames-server start:dev'",
    "watch": "yarn nx -- watch --all -- 'yarn build --verbose' && 'yarn artifacts:copy'",
    "artifacts:copy": "yarn run artifacts:clean; mkdir ./apps/server/artifacts; yarn artifacts:copy:all",
    "artifacts:clean": "rm -rf ./apps/server/artifacts",
    "artifacts:copy:all": "nx run-many -t artifacts:copy:package --projects=tag:artifact",
    "test:eslint": "nx run-many -t test:eslint",
    "test:madge": "nx run-many -t test:madge",
    "test:unit": "nx run-many -t test",
    "test:tsc": "nx run-many -t test:tsc",
    "test": "yarn clean && yarn build && concurrently 'yarn test:tsc' 'yarn test:unit' 'yarn test:eslint'",
    "graph": "yarn nx graph"
  },
  "workspaces": [
    "apps/*",
    "lib/*",
    "games/*/*"
  ],
  "dependencies": {
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-typescript": "^12.1.2",
    "@rollup/plugin-url": "^8.0.2",
    "concurrently": "^9.1.1",
    "lerna": "^8.1.9",
    "nx": "^20.3.0",
    "rollup": "^4.29.1",
    "typescript": "^5.7.2"
  },
  "devDependencies": {
    "@parcel/transformer-typescript-types": "^2.13.3"
  }
}
