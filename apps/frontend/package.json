{
  "name": "@shieldmaidengames/webgames-frontend",
  "version": "0.0.0",
  "description": "frontend for the webgames host",
  "license": "ISC",
  "type": "module",
  "author": "polerin (polerin@eclexia.net)",
  "scripts": {
    "build": "concurrently 'yarn build:index'",
    "build:index": "parcel build ./markup/index.html --no-cache --dist-dir ./dist --public-url /",
    "clean": "rm -rf ./dist",
    "artifacts:copy:package": "cp -r ./dist ../server/artifacts/frontend",
    "test": "yarn build && npx playwright test"
  },
  "dependencies": {
    "@lit/context": "^1.1.6",
    "@shieldmaidengames/webgames-display-components": "0.0.0",
    "@shieldmaidengames/webgames-internal-shared": "0.0.0",
    "@shieldmaidengames/webgames-shared": "0.0.0",
    "ditox": "^3.0.0",
    "lit": "^3.2.1"
  },
  "devDependencies": {
    "@parcel/config-default": "^2.13.3",
    "@parcel/packager-ts": "^2.13.3",
    "@parcel/transformer-typescript-tsc": "^2.13.3",
    "@playwright/test": "^1.49.0",
    "@types/node": "^22.10.0",
    "parcel": "2.13.3",
    "typescript": "5.7.2"
  }
}
