{
    "extends": "nx/presets/npm.json",
    "parallel": 3,
    "tasksRunnerOptions": {
        "default": {
            "runner": "nx/tasks-runners/default",
            "options": {
                "cacheableOperations": ["build", "test"]
            }
        }
    },
    "namedInputs": {
        "libs": [ "{projectRoot}/lib/**/*.{ts,json}" ],
        "apps": [ "{projectRoot}/apps/*/!(dist)/**/*.{ts,json}" ]
    },
    "targetDefaults": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["libs", "apps"]
        }
    },
    "targets": {
        "build": {
            "dependencies": true,
            "dependsOn": ["^build"]
        },
        "test": {
            "dependsOn": ["build"]
        }
    }
}
