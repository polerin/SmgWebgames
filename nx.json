{
    "extends": "nx/presets/npm.json",
    "tasksRunnerOptions": {
        "default": {
            "runner": "nx/tasks-runners/default",
            "options": {
                "cacheableOperations": ["build"]
            }
        }
    },
    "namedInputs": {
        "default": ["{projectRoot}/**/*.ts", "{projectRoot}/**/*.json"],
        "frontend": [
            "default",
            "{projectRoot}/**/*.html",
            "{projectRoot}/**/*.css"
        ]
    },
    "targetDefaults": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["default", "^default"],
            "outputs": ["{projectRoot}/dist"]
        }
    }
}
